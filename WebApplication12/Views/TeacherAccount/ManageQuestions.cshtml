@model WebApplication12.Models.Question
@{
    ViewBag.Title = "ManageQuestions";
}


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<div class="container body-content" id="Result">


</div>
<h3>Add New</h3>
@using (Ajax.BeginForm("Questions", "TeacherAccount", null, new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "Result"
}
))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.statement, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.statement)
                @Html.ValidationMessageFor(model => model.statement)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.op1, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.op1)
                @Html.ValidationMessageFor(model => model.op1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.op2, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.op2)
                @Html.ValidationMessageFor(model => model.op2)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.op3, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.op3)
                @Html.ValidationMessageFor(model => model.op3)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.op4, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.op4)
                @Html.ValidationMessageFor(model => model.op4)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.answer, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.answer)
                @Html.ValidationMessageFor(model => model.answer)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    
    <script>
        $(document).ready(function () {
            $.ajax({
                url: "@Url.Action("Questions","TeacherAccount")",
                success: function (data, textStatus, XMLHttpRequest) {
                    SetData(data);}
            });
            function SetData(data) {
                $("#Result").html(data);
            }
        });
    </script>
}

