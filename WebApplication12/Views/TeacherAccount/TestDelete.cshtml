@model WebApplication12.Models.TestQuestionViewModel
@{
    ViewBag.Title = "TestDelete";
}

<h2>TestDelete</h2>
<h3>Are you sure you want to delete this?</h3>
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.test.name)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.test.name)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.test.totalquestions)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.test.totalquestions)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.test.duaration)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.test.duaration)
    </dd>
    @{int num = 1;}
    @foreach (var item in Model.questions)
    {
        <dt>
            Question @num
        </dt>
        <dd>
            @item.statement
        </dd>
        num++;
    }

</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}

