@model IEnumerable<WebApplication12.Models.Question>
@{
    ViewBag.Title = "questions";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.statement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.op4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.answer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Test.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.statement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.op1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.op2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.op3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.op4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Test.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditQuestion", new { id = item.q_id }) |
                @Html.ActionLink("Details", "QuestionDetails", new { id = item.q_id }) |
                @Html.ActionLink("Delete", "DeleteQuestion", new { id = item.q_id })
            </td>
        </tr>
    }

</table>